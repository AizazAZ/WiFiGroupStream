<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamadhoc.wifigroupstream" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Google Play filtering -->
    <uses-feature android:name="android.hardware.wifi.direct" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamadhoc.wifigroupstream.MainActivity"
            android:label="@string/app_name" android:screenOrientation="nosensor" android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamadhoc.wifigroupstream.dj.DJActivity"
            android:label="@string/title_activity_dj" android:screenOrientation="nosensor" android:theme="@android:style/Theme.Holo">
        </activity>
        <activity
            android:name="com.teamadhoc.wifigroupstream.speaker.SpeakerActivity"
            android:label="@string/title_activity_speaker" android:screenOrientation="nosensor" android:theme="@android:style/Theme.Holo">
        </activity>
    </application>
</manifest>
